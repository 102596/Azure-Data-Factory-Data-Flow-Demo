{
	"name": "ScheamDrift",
	"properties": {
		"sources": [
			{
				"dataset": {
					"referenceName": "salesdrift",
					"type": "DatasetReference"
				},
				"name": "source1",
				"script": "source(allowSchemaDrift: true,validateSchema: false) ~> source1"
			}
		],
		"sinks": [
			{
				"dataset": {
					"referenceName": "driftout",
					"type": "DatasetReference"
				},
				"name": "sink1",
				"script": "CleanTotal sink(saveMode:'overwrite' ) ~> sink1"
			}
		],
		"transformations": [
			{
				"name": "AddTax",
				"script": "source1 derive(each(match(name == 'COGS' || name == 'Cost'), $$+'_with_tax' = round(toDouble(trim($$,'$')) * 1.09,2))) ~> AddTax"
			},
			{
				"name": "CleanTotal",
				"script": "AddTax derive(each(match(locate('with_tax',name) > 0), $$ = left('$'+toString($$)+'00',locate('.', $$)+3))) ~> CleanTotal"
			}
		]
	}
}